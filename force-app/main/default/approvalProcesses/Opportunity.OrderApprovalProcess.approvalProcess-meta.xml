<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account</field>
        <field>Office__c</field>
        <field>NegotiationRepPerson__c</field>
        <field>CloseDate</field>
        <field>PostingStartDate__c</field>
        <field>DiscountAmount__c</field>
        <field>ProductMaxDiscountRate__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>mo.sato+c@bengo4.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>マネージャ承認</description>
        <label>マネージャ承認</label>
        <name>Step1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>a.abe+c@bengo4.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>takahakke+c@bengo4.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>商品の最大割引率が30％を超えている場合、経理の承認が必要</description>
        <entryCriteria>
            <criteriaItems>
                <field>Opportunity.ProductMaxDiscountRate__c</field>
                <operation>greaterOrEqual</operation>
                <value>30</value>
            </criteriaItems>
        </entryCriteria>
        <label>経理承認</label>
        <name>Step2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>商談の申込承認用の承認プロセス</description>
    <emailTemplate>unfiled$public/OrderApprovalApplication</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>notEqual</operation>
            <value>×,受注</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.OrderApproved__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.PostingStartDate__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.CheckOfNegotiationProductsAndSales__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>NegotiationNameUpdateBack</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UpdateOrderApprovalToTrue</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UpdateToOrderPhase</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>NegotiationNameUpdateBack</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RejectEmail</name>
            <type>Alert</type>
        </action>
        <action>
            <name>RejectToPhaseA</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>NegotiationNameUpdate</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>【20231013_無効化済】申込承認プロセス</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>NegotiationNameUpdateBack</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
