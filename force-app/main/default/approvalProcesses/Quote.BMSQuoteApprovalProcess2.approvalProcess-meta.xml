<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>QuoteNumber</field>
        <field>Name</field>
        <field>QuoteToAddress</field>
        <field>Account</field>
        <field>Opportunity</field>
        <field>TotalPrice</field>
        <field>Tax</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>kamimura+c@bengo4.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>ビジネスソリューショングループマネージャー承認</description>
        <label>ビジネスソリューショングループマネージャー承認</label>
        <name>Step1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>sekiguchi+c@bengo4.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>事業企画・マーケティングチームマネージャー承認</description>
        <label>事業企画・マーケティングチームマネージャー承認</label>
        <name>Step2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>tagami+c@bengo4.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>ビジネスメディア&amp;ソリューション事業部部長承認</description>
        <label>ビジネスメディア&amp;ソリューション事業部部長承認</label>
        <name>Step3</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>ビジネスメディア&amp;ソリューション事業部部長承認。（承認ルート判定2）</description>
    <emailTemplate>unfiled$public/QuoteApprovalApplication</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>notEqual</operation>
            <value>承認済</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.QuoteApprovalPattern__c</field>
            <operation>equals</operation>
            <value>2</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>QuoteCompleteEmail</name>
            <type>Alert</type>
        </action>
        <action>
            <name>QuoteStatusApprovedUpdate</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UpdateEstimateApprovalIntoTrue</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>QuoteRejectEmail</name>
            <type>Alert</type>
        </action>
        <action>
            <name>QuoteStatusRejectedUpdate</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>QuoteStatusApprovalDuringUpdate</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>BMS見積承認プロセス（ビジネスメディア&amp;ソリューション事業部部長承認）</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>QuoteStatusCreatingUpdate</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
