<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account</field>
        <field>Office__c</field>
        <field>NegotiationRepPerson__c</field>
        <field>CloseDate</field>
        <field>PostingStartDate__c</field>
        <field>DiscountAmount__c</field>
        <field>ProductMaxDiscountRate__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>kamimura+c@bengo4.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mo.sato+c@bengo4.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>sekiguchi+c@bengo4.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>受注承認チームの承認（いずれか）</description>
        <label>受注承認チーム承認</label>
        <name>Step1</name>
    </approvalStep>
    <description>商談の受注承認用の承認プロセス。
フェーズが「07_契約締結」の時のみ画面にボタンが表示される</description>
    <emailTemplate>unfiled$public/OrderApprovalApplication</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>07_契約締結</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.OrderApproved__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.DocumentConfirmationUrl__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>NegotiationNameUpdateBack</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UpdateOrderApprovalToTrue</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UpdateToPhase_Order</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>NegotiationNameUpdateBack</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RejectEmail</name>
            <type>Alert</type>
        </action>
        <action>
            <name>UpdateToOrderPhase</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>NegotiationNameUpdate</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>受注承認プロセス</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>NegotiationNameUpdateBack</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
