<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>ApplicationApprovalCompleteEmail</fullName>
        <description>申込承認の承認メール</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>DefaultWorkflowUser</senderType>
        <template>unfiled$public/ApplicationApprovalCompleteTemplate</template>
    </alerts>
    <alerts>
        <fullName>ApplicationApprovalRejectEmail</fullName>
        <description>申込承認却下時の差し戻しメール</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/ApplicationApprovalRejectTemplate</template>
    </alerts>
    <alerts>
        <fullName>CompleteAprovalEmail</fullName>
        <description>受注承認の承認メール</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>DefaultWorkflowUser</senderType>
        <template>unfiled$public/OrderApprovalComplete</template>
    </alerts>
    <alerts>
        <fullName>RejectEmail</fullName>
        <description>受注承認却下時の差し戻しメール</description>
        <protected>false</protected>
        <recipients>
            <type>owner</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/OrderApprovalRejectTemplate</template>
    </alerts>
    <fieldUpdates>
        <fullName>ChangeApplicationApprovedFlagToTrue</fullName>
        <field>ApplicationApproved__c</field>
        <literalValue>1</literalValue>
        <name>申込承認フラグをTRUEに変更する</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>NegotiationNameUpdate</fullName>
        <description>受注承認中の商談名の一次更新用</description>
        <field>Name</field>
        <formula>Name &amp; &quot;【受注承認】&quot;</formula>
        <name>商談名更新_受注承認</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>NegotiationNameUpdateBack</fullName>
        <description>受注承認中に一時的に商談名を変更したものの戻し</description>
        <field>Name</field>
        <formula>SUBSTITUTE(Name, &quot;【受注承認】&quot;, &quot;&quot;)</formula>
        <name>商談名更新_戻し（受注承認）</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>NegotiationNameUpdateBack_Application</fullName>
        <field>Name</field>
        <formula>SUBSTITUTE(Name, &quot;【申込承認】&quot;, &quot;&quot;)</formula>
        <name>商談名更新_戻し（申込承認）</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>NegotiationNameUpdate_Application</fullName>
        <field>Name</field>
        <formula>Name &amp; &quot;【申込承認】&quot;</formula>
        <name>商談名更新_申込承認</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>RejectToPhaseA</fullName>
        <description>受注承認差し戻し時にフェーズをA（差戻）へと更新</description>
        <field>StageName</field>
        <literalValue>A（差戻）</literalValue>
        <name>フェーズAへの差戻</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>UpdateOrderApprovalToTrue</fullName>
        <description>受注承認時に商談の受注承認をtrueに更新</description>
        <field>OrderApproved__c</field>
        <literalValue>1</literalValue>
        <name>商談の受注承認をtrueへ更新</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>UpdateToOrderPhase</fullName>
        <description>受注承認後の「07_契約締結」のフェーズ変更</description>
        <field>StageName</field>
        <literalValue>07_契約締結</literalValue>
        <name>商談のフェーズを07_契約締結へ更新</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>UpdateToPhase_Order</fullName>
        <field>StageName</field>
        <literalValue>受注</literalValue>
        <name>商談のフェーズを受注に変更</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
</Workflow>
